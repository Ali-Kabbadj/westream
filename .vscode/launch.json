{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Desktop Shell",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/desktop-shell/target/x86_64-pc-windows-msvc/debug/desktop-shell.exe",
      "args": [],
      "cwd": "${workspaceFolder}/desktop-shell",
      "preLaunchTask": "cargo-nightly-build",
      "env": {
        "RUST_BACKTRACE": "full",
        "RUST_LOG": "debug"
      },
      "sourceMap": {
        "/rustc/": "${env:USERPROFILE}\\.rustup\\toolchains\\nightly-x86_64-pc-windows-msvc\\lib\\rustlib\\src\\rust\\"
      }
    }
  ]
}
